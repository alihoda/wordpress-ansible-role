version: '3'

services:
  nginx:
    image: nginx:1.25-alpine
    restart: always
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - {{ nginx_base_dir }}/certs:/etc/nginx/certs:ro
      - {{ nginx_base_dir }}/conf:/etc/nginx/conf.d:ro
      - {{ nginx_base_dir }}/snippets:/etc/nginx/snippets:ro
      - {{ wordpress_base_dir}}/html:/var/www/html
    networks:
      - reg
      - web

networks:
  reg:
    external: true
  web:
    external: true
